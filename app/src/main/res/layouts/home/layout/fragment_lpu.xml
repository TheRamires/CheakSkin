<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.home.components.LPUFragment" />
        <variable
            name="entity"
            type="ru.skinallergic.checkskin.components.home.data.LpuOneEntity" />
    </data>
<RelativeLayout
    android:onClick="@{fragment::toDetail}"
    android:background="@color/white"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".components.home.components.LPUFragment"
    >

    <RatingBar
        android:rating="@{entity.ratingFloat}"
        android:isIndicator="true"
        android:layout_marginTop="@dimen/margin_min"
        android:layout_below="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:progressDrawable="@drawable/rating_small_custom"
        android:id="@+id/ratingBar"
        />

    <TextView
        android:layout_marginTop="@dimen/margin_min"
        android:layout_toRightOf="@+id/ratingBar"
        android:textColor="@color/black"
        android:id="@+id/rating"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@{String.valueOf(entity.ratingFloat)}"
        />

    <TextView
        android:textSize="12sp"
        android:id="@+id/adress"
        android:layout_below="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{entity.address}"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@+id/adress"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{entity.name}"/>
    <TextView
        android:textColor="@color/red"
        android:textSize="10sp"
        android:layout_below="@+id/name"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{entity.phones}"/>
    <ImageButton
        android:id="@+id/further"
        android:layout_margin="@dimen/margin_min"
        android:alpha="0.6"
        android:layout_marginVertical="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_further_orange"
        android:layout_width="10dp"
        android:layout_height="20dp"/>

</RelativeLayout>
</layout>