<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/arround"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_around"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_body_man_front"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/toggle_body_center"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toggle_head" />

            <ToggleButton
                android:id="@+id/toggle_head"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="196dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ToggleButton
                android:id="@+id/toggle_hand_1"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="72dp"
                app:layout_constraintEnd_toEndOf="@+id/toggle_body_center"
                app:layout_constraintTop_toBottomOf="@+id/toggle_head" />

            <ToggleButton
                android:id="@+id/toggle_hand_2"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/toggle_hand_1"
                app:layout_constraintTop_toBottomOf="@+id/toggle_head" />

            <ToggleButton
                android:id="@+id/toggle_leg_1"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="@+id/toggle_body_center"
                app:layout_constraintTop_toBottomOf="@+id/toggle_hand_1" />

            <ToggleButton
                android:id="@+id/toggle_leg_2"
                style="@style/BodyToggle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="@+id/toggle_body_center"
                app:layout_constraintTop_toBottomOf="@+id/toggle_hand_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</FrameLayout>
</layout>