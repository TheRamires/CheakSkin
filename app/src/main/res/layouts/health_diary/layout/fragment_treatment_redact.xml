<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.util.List"/>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.TreatmentRedactFragment" />
        <variable
            name="therapies"
            type="List" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.fooddiary.FoodDiaryFragment">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:onClick="@{fragment::backStack}"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_marginRight="@dimen/margin_big"
                android:hint="tests name"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лечение"
                />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:paddingHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/layout"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Лечение"
                    android:textColor="@color/purple_300"/>
                <TextView
                    android:id="@+id/desc"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/title"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Важно подробно записать, чем ты лечишься и на что реагируешь:"/>
                <View
                    android:layout_below="@+id/desc"
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/layout"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/layout0"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title0"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Наружная терапия (мази, кремы)"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/title0"
                    android:id="@+id/description0"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Наносятся непосредственно на пораженные участки кожи"/>
                <EditText
                    android:onTextChanged="@{fragment::topicalTherapyChanged}"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/description0"
                    android:id="@+id/editText0"
                    android:textColor="@color/purple_300"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="16sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(therapies.get(0))}"/>
                <ImageButton
                    android:id="@+id/check_mark_1"
                    android:visibility="invisible"
                    android:layout_below="@+id/description0"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="27dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cheak_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_below="@+id/editText0"
                    android:id="@+id/divider0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/layout0"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/layout1"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title1"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Системная терапия"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/title1"
                    android:id="@+id/description"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Лекарства, которые принимают в виде таблеток или инъекций, оказывающие влияние на организм в целом"/>
                <EditText
                    android:onTextChanged="@{fragment::systemicTherapyChanged}"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/description"
                    android:id="@+id/editText"
                    android:textColor="@color/purple_300"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="16sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(therapies.get(1))}"/>
                <ImageButton
                    android:id="@+id/check_mark_2"
                    android:visibility="invisible"
                    android:layout_below="@+id/description"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="27dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cheak_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_below="@+id/editText"
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/layout1"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/layout2"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title2"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Прочее"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/title2"
                    android:id="@id/description"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="Иные препараты и средства лечения"/>
                <EditText
                    android:onTextChanged="@{fragment::otherTreatmentsChanged}"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/description"
                    android:id="@+id/editText2"
                    android:textColor="@color/purple_300"
                    android:paddingRight="20dp"
                    android:layout_marginTop="9dp"
                    android:textSize="16sp"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(therapies.get(2))}"/>
                <ImageButton
                    android:id="@+id/check_mark_3"
                    android:visibility="invisible"
                    android:layout_below="@+id/description"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="27dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cheak_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_below="@+id/editText2"
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray"
                    />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="@{fragment::save}"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/layout2"
                android:background="@drawable/button_pressed_blue"
                android:layout_marginHorizontal="@dimen/norm_button_margin"
                android:textAllCaps="false"
                android:paddingTop="0dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15sp"
                android:text="СОХРАНИТЬ"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/to_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>