<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.reminders.RemindersPeriodFragment" />
        <variable
            name="choose"
            type="java.lang.Long" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.healthdiary.components.reminders.RemindersAddFragment">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/background"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:background="@drawable/ic_background_alarm_clock_1"/>

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:onClick="@{fragment::backStack}"
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@drawable/ic_back" />
            <TextView
                android:text="Напомнить"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name of LPU item"
                />
            <ImageView
                android:id="@+id/ok_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/cheak_mark"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginVertical="15dp"
                android:textColor="@color/black"
                android:text="Нет"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginVertical="15dp"
                android:textColor="@color/black"
                android:text="За 5 мин"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginVertical="15dp"
                android:textColor="@color/black"
                android:text="За 30 мин"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginVertical="15dp"
                android:textColor="@color/black"
                android:text="За час"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </LinearLayout>
        <RadioGroup
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_gravity="right"
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_0"
                android:layout_marginTop="75dp"
                android:theme="@style/MyRadioButton2"
                android:button="@drawable/check_box_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_1"
                android:layout_marginTop="30dp"
                android:theme="@style/MyRadioButton2"
                android:button="@drawable/check_box_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_2"
                android:layout_marginTop="30dp"
                android:theme="@style/MyRadioButton2"
                android:button="@drawable/check_box_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_3"
                android:layout_marginTop="30dp"
                android:theme="@style/MyRadioButton2"
                android:button="@drawable/check_box_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </RelativeLayout>
</layout>