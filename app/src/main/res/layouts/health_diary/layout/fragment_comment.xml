<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.CommentFragment" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.fooddiary.FoodDiaryFragment_UNUSED"
        android:background="@color/gray">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:onClick="@{fragment::backStack}"
                android:src="@drawable/back" />
            <TextView
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оценка"
                />

        </RelativeLayout>

        <RelativeLayout
            android:paddingHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="12dp">

            <EditText
                android:hint="Эффект леченния"
                android:id="@+id/title3"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/title3_descrip"
                android:paddingRight="20dp"
                android:layout_below="@+id/title3"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 - 1000 символов"
                />

            <View
                android:layout_below="@+id/title3_descrip"
                android:layout_marginTop="20dp"
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <View
                android:layout_below="@+id/stars"
                android:layout_marginTop="20dp"
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <Button
                android:layout_marginTop="257dp"
                android:layout_centerHorizontal="true"
                android:text="Сохранить"
                android:layout_width="158dp"
                android:layout_height="37dp"
                android:background="@drawable/button_green"/>

        </RelativeLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>