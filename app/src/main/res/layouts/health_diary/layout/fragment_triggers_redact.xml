<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.TriggersRedactFragment" />
    </data>
    <LinearLayout android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.healthdiary.components.TriggersFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:onClick="@{fragment::backstack}"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_marginRight="@dimen/margin_big"
                android:hint="tests name"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Триггеры"
                />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <ScrollView
            android:scrollbars="none"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginVertical="@dimen/margin_normal"
                    android:layout_marginHorizontal="@dimen/margin_big"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Триггеры"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:layout_marginHorizontal="@dimen/margin_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отметь триггеры, если таковые имеются"/>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_normal"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.dd.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_0"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Стресс"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>

                <com.dd.ShadowLayout
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_1"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Смена климата"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>
                <com.dd.ShadowLayout
                    android:layout_marginTop="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_2"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Другая болезнь"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>

                <com.dd.ShadowLayout
                    android:layout_marginTop="240dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_3"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Питание"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>
                <com.dd.ShadowLayout
                    android:layout_marginTop="320dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_4"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Цветение"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>
                <com.dd.ShadowLayout
                    android:layout_marginTop="400dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_5"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Контакт с аллергенами"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />

                </com.dd.ShadowLayout>
                <com.dd.ShadowLayout
                    android:id="@+id/last_shadow"
                    android:layout_marginTop="480dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="86dp"
                    app:sl_dx="0dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="@color/shadow_color1"
                    app:sl_shadowRadius="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trig_6"
                        android:gravity="center_vertical|left"
                        android:drawablePadding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_btn"
                        android:background="@drawable/button_pressed_white"
                        android:paddingHorizontal="35dp"
                        android:text="Другое"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_300"
                        android:textSize="13sp" />
                </com.dd.ShadowLayout>
                <View
                    android:background="@color/gray"
                    android:layout_below="@+id/last_shadow"
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_normal"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="@{fragment::save}"
                    android:layout_below="@+id/line"
                    android:layout_marginBottom="34dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_pressed_blue"
                    android:layout_marginHorizontal="@dimen/norm_button_margin"
                    android:textAllCaps="false"
                    android:paddingTop="0dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15sp"
                    android:text="СОХРАНИТЬ"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:id="@+id/to_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
