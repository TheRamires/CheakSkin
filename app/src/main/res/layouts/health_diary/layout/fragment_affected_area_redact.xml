<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.AffectedAreaRedactFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.fooddiary.FoodDiaryFragment">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:onClick="@{fragment::backStack}"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_marginRight="@dimen/margin_big"
                android:hint="tests name"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фото высыпаний"
                />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:paddingHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:id="@+id/text_view"
                android:text="Часть тела (ракурс)"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/purple_300"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginTop="@dimen/margin_min"
                android:layout_below="@+id/text_view"
                android:orientation="horizontal"
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/container_for_photo_up_1"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_up_1"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
                <Space
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/container_for_photo_up_2"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_up_2"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
                <Space
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/container_for_photo_up_3"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_up_3"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_below="@+id/photos"
                android:layout_marginTop="@dimen/margin_min"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler1"/>

            <View
                android:id="@+id/line_1"
                android:layout_below="@+id/recycler1"
                android:layout_marginTop="@dimen/margin_min"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_below="@+id/line_1"
                android:id="@+id/text_view_2"
                android:text="Часть тела (ракурс)"
                android:layout_marginTop="@dimen/margin_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/purple_300"/>


            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginTop="@dimen/margin_min"
                android:layout_below="@+id/text_view_2"
                android:orientation="horizontal"
                android:id="@+id/photos_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/container_for_photo_down_1"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_down_1"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
                <Space
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/container_for_photo_down_2"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_down_2"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
                <Space
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/container_for_photo_down_3"
                    android:background="@drawable/ic_background_photo_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{fragment::clickPhoto}"
                        android:id="@+id/photo_down_3"
                        android:layout_width="102dp"
                        android:layout_height="102dp"/>

                </FrameLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="@dimen/margin_min"
                android:layout_marginVertical="5dp"
                android:layout_below="@+id/photos_2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler2"/>

            <View
                android:id="@+id/line_2"
                android:layout_below="@+id/recycler2"
                android:layout_marginVertical="@dimen/margin_min"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <ImageButton
                android:onClick="@{fragment::toRedactBody}"
                android:layout_below="@+id/line_2"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_centerHorizontal="true"
                android:id="@+id/button_plus"
                style="@style/BodyToggle"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="@{fragment::save}"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_below="@+id/button_plus"
                android:background="@drawable/button_pressed_blue"
                android:layout_marginHorizontal="@dimen/norm_button_margin"
                android:textAllCaps="false"
                android:paddingTop="0dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15sp"
                android:text="СОХРАНИТЬ"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/to_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>
