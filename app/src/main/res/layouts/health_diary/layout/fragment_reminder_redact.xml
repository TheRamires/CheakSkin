<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.reminders.RemindersRedactFragment" />
        <variable
            name="viewModel"
            type="ru.skinallergic.checkskin.components.healthdiary.viewModels.RemindersViewModel" />
    </data>

    <RelativeLayout
        tools:context=".components.healthdiary.components.reminders.RemindersAddFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:onClick="@{fragment::backStack}"
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@drawable/ic_back" />
            <TextView
                android:text="Оценка"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name of LPU item"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/cheak_mark"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/title_layout"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_toLeftOf="@+id/date"
                    android:id="@+id/imageView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/my_icon_sun"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:hint="Среда, 05 апреля"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{viewModel.entity.description}"
                    android:id="@+id/type"
                    android:layout_toRightOf="@+id/text"
                    android:hint="Лечение"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="13sp"
                    android:background="@null"
                    android:text="@{viewModel.entity.name}"
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="name"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Время "/>
                <TextView
                    android:onClick="@{fragment::editTime}"
                    android:clickable="true"
                    android:text="@{viewModel.entity.time}"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/btn"
                    android:id="@+id/time"
                    android:hint="time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn"
                    android:background="@drawable/button_right"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Напоминание "/>
                <TextView
                    android:text="@{viewModel.entity.remind}"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/btn2"
                    android:id="@+id/remind"
                    android:hint="remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn2"
                    android:background="@drawable/button_right"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Повтор "/>
                <TextView
                    android:text="@{viewModel.entity.repeat}"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/btn3"
                    android:id="@+id/repeat"
                    android:hint="repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn3"
                    android:background="@drawable/button_right"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <Button
                android:onClick="@{fragment::delete}"
                android:text="Удалить"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:background="@drawable/button_green"/>
        </LinearLayout>
    </RelativeLayout>

</layout>