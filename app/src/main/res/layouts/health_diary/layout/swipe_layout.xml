<?xml version="1.0" encoding="utf-8"?>
<layout android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="entity"
            type="ru.skinallergic.checkskin.components.healthdiary.data.EntityReminders" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <com.daimajia.swipe.SwipeLayout
        android:oneshot="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/item_back_ground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/swipe"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp"
        android:layout_height="80dp"
        android:clickable="true">


        <ImageView
            android:background="@android:color/transparent"
            android:clickable="true"
            android:id="@+id/delete"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <com.dd.ShadowLayout
            android:id="@+id/shadow"
            android:translationZ="10dp"
            app:sl_cornerRadius="85dp"
            app:sl_shadowColor="@color/shadow_color1"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <RelativeLayout
            android:focusable="true"
            android:id="@+id/click_position"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{entity.name}"
                android:textColor="@android:color/black"
                />
            <TextView
                android:text="@{entity.description}"
                android:id="@+id/description"
                android:layout_below="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/time"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/btn"
                android:text="@{entity.time}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        </com.dd.ShadowLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>