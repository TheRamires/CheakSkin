<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.healthdiary.components.AffectedAreasFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.fooddiary.FoodDiaryFragment">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:onClick="@{fragment::backStack}"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_marginRight="@dimen/margin_big"
                android:hint="tests name"
                android:layout_toRightOf="@+id/img_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фото высыпаний"
                />
            <ImageView
                android:onClick="@{fragment::toRedact}"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/my_icon_pencil"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingHorizontal="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:layout_marginHorizontal="@dimen/margin_min"
                    android:id="@+id/text_view"
                    android:text="Часть тела (ракурс)"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/purple_300"/>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/margin_min"
                    android:layout_marginTop="@dimen/margin_min"
                    android:layout_below="@+id/text_view"
                    android:orientation="horizontal"
                    android:id="@+id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/container_for_photo_up_1"
                        android:background="@drawable/ic_background_photo_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/photo_1"
                            android:layout_width="102dp"
                            android:layout_height="102dp"/>

                    </FrameLayout>
                    <Space
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:id="@+id/container_for_photo_up_2"
                        android:background="@drawable/ic_background_photo_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/photo_2"
                            android:layout_width="102dp"
                            android:layout_height="102dp"/>

                    </FrameLayout>
                    <Space
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:id="@+id/container_for_photo_up_3"
                        android:background="@drawable/ic_background_photo_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/photo_3"
                            android:layout_width="102dp"
                            android:layout_height="102dp"/>

                    </FrameLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginHorizontal="@dimen/margin_min"
                    android:layout_below="@+id/photos"
                    android:layout_marginTop="@dimen/margin_min"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler1"/>

                <View
                    android:id="@+id/line_1"
                    android:layout_below="@+id/recycler1"
                    android:layout_marginTop="@dimen/margin_min"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>
