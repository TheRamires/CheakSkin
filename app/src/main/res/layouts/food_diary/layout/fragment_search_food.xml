<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.fooddiary.components.SearchFoodFragment" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.fooddiary.components.SearchFoodFragment"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:id="@+id/title_layout"
        android:paddingHorizontal="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/img_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:onClick="@{fragment::backStack}"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/title"
            android:layout_toRightOf="@+id/img_btn"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Питание"
            />

    </RelativeLayout>

    <RelativeLayout
        android:paddingHorizontal="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="12dp">

        <EditText
            android:paddingHorizontal="30dp"
            android:inputType="textNoSuggestions"
            android:textSize="14sp"
            android:textColorHint="@color/black"
            android:hint="Введите запрос"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:layout_width="332dp"
            android:layout_height="40dp"
            android:background="@drawable/corners_input_text"
            />

    </RelativeLayout>

</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>