<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="entity"
            type="ru.skinallergic.checkskin.components.fooddiary.data.FoodMealForMain" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginHorizontal="20dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/button_registr_uncklicable"
            android:layout_gravity="center"
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:focusable="true"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Delete" />

        </RelativeLayout>

            <com.dd.ShadowLayout
                app:sl_cornerRadius="80dp"
                android:layout_gravity="center"
                app:sl_shadowRadius="20dp"
                app:sl_shadowColor="@color/shadow_color1"
                android:layout_width="360dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:id="@+id/container_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        />

                    <TextView
                        android:layout_below="@+id/date"
                        android:text="@{String.valueOf(entity.meal)}"
                        android:hint="Завтрак"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/name" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/name"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />
                    <View
                        android:focusable="true"
                        android:clickable="true"
                        android:id="@+id/clickable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
            </com.dd.ShadowLayout>
    </FrameLayout>
</layout>