<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.fooddiary.components.BaseFoodFragment" />
    </data>
    <LinearLayout android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.fooddiary.components.DetailFoodFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@drawable/ic_back" />
            <TextView
                android:text="Питание"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/ok_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/cheak_mark"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:layout_toLeftOf="@+id/date"
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/my_icon_sun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:hint="date"
                android:text="@{fragment.dateObservable}"
                android:textColor="@color/red"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:layout_marginHorizontal="10dp"
                android:id="@+id/eat_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Наименование продукта"
                    android:id="@+id/name"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/weight"
                    android:layout_marginStart="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="Вес"/>

                <ImageView
                    android:id="@+id/delete_button"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cros"/>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_food_button_add"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_food_background"/>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>