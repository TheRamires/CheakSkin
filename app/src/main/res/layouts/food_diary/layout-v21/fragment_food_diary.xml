<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="ru.skinallergic.checkskin.components.fooddiary.FoodDiaryFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.fooddiary.FoodDiaryFragment"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:id="@+id/title_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <ImageButton
            android:onClick="toProfile"
            android:layout_marginRight="5dp"
            android:id="@+id/img_btn"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/my_icon_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:layout_toRightOf="@+id/img_btn"
            android:paddingHorizontal="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дневник питания"
            />

        <ImageButton
            android:layout_marginHorizontal="5dp"
            android:onClick="@{fragment::toSearch}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/glass"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/calendar"
            android:onClick="@{fragment::clickDate}" />

        <TextView
            android:text="@{fragment.dateObservable}"
            android:id="@+id/date"
            android:textSize="14sp"
            android:hint="Дата"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="40dp"
            android:id="@+id/oval"
            android:layout_width="match_parent"
            android:layout_height="370dp"

            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/view1"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/oval"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_center"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/oval2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_toStartOf="@+id/view_center"
                android:layout_toLeftOf="@+id/view_center"
                android:text="Завтрак"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintTop_toBottomOf="@+id/brackfast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="Ужин"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/dinner"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="57dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_toEndOf="@+id/view_center"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="Обед"
                app:layout_constraintStart_toEndOf="@+id/imageButton2"
                app:layout_constraintTop_toBottomOf="@+id/lunch" />

            <TextView

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:text="Перекус"
                app:layout_constraintEnd_toStartOf="@+id/lunch"
                app:layout_constraintStart_toEndOf="@+id/brackfast"
                app:layout_constraintTop_toBottomOf="@+id/snack" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@drawable/button_plus"
                android:onClick="@{fragment::add}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/snack"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginEnd="83dp"
                android:layout_marginRight="83dp"
                android:background="@drawable/icon_food4"
                android:onClick="@{fragment::chooseTimeOfMeal}"
                app:layout_constraintBottom_toTopOf="@+id/imageButton2"
                app:layout_constraintCircle="@+id/view_center"
                app:layout_constraintCircleAngle="0"
                app:layout_constraintCircleRadius="140dp"
                app:layout_constraintEnd_toStartOf="@+id/lunch"
                app:layout_constraintStart_toEndOf="@+id/brackfast"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/lunch"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginBottom="83dp"
                android:background="@drawable/icon_food3"
                android:onClick="@{fragment::chooseTimeOfMeal}"
                app:layout_constraintBottom_toTopOf="@+id/dinner"
                app:layout_constraintCircle="@+id/view_center"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton2"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <ImageButton
                android:id="@+id/dinner"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@drawable/icon_food"
                android:onClick="@{fragment::chooseTimeOfMeal}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircle="@+id/view_center"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="120dp"
                app:layout_constraintEnd_toStartOf="@+id/lunch"
                app:layout_constraintStart_toEndOf="@+id/brackfast"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

            <ImageButton
                android:id="@+id/brackfast"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="82dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/icon_food"
                android:onClick="@{fragment::chooseTimeOfMeal}"
                app:layout_constraintBottom_toTopOf="@+id/dinner"
                app:layout_constraintCircle="@+id/view_center"
                app:layout_constraintCircleAngle="270"
                app:layout_constraintCircleRadius="120dp"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/snack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_below="@+id/oval"
            android:layout_width="match_parent"
            android:layout_height="99dp">
            <TextView
                android:id="@+id/timeOfMeal"
                android:textColor="@color/black"
                android:hint="Завтрак"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:clickable="true"
                android:onClick="@{fragment::toRedact}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:layout_marginTop="29dp"
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>